<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<!-- Spring -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<!-- Servlets declaration -->
	<servlet>
		<servlet-name>dashboard</servlet-name>
		<servlet-class>com.excilys.database.servlets.DashboardServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>addComputer</servlet-name>
		<servlet-class>com.excilys.database.servlets.AddComputerServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>editComputer</servlet-name>
		<servlet-class>com.excilys.database.servlets.EditComputerServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>deleteComputer</servlet-name>
		<servlet-class>com.excilys.database.servlets.DeleteComputerServlet</servlet-class>
	</servlet>

	<!-- Servlets mapping -->
	<servlet-mapping>
		<servlet-name>dashboard</servlet-name>
		<url-pattern>/dashboard</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>addComputer</servlet-name>
		<url-pattern>/addComputer</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>editComputer</servlet-name>
		<url-pattern>/editComputer</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>deleteComputer</servlet-name>
		<url-pattern>/deleteComputer</url-pattern>
	</servlet-mapping>

	<!-- Error Page -->
	<error-page>
		<error-code>500</error-code>
		<location>/WEB-INF/views/500.html</location>
	</error-page>

	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/views/404.html</location>
	</error-page>
</web-app>